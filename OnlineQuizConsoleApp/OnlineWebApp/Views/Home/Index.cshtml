@model IEnumerable<OnlineWebApp.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Number of questions")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Questions.Count)
            </td>
        </tr>
    }

</table>


@if (!User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Login/Register", "Register", "Login")
    </p>
}
